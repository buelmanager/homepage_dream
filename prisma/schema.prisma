generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// Auth Models
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)
  credits       Int       @default(3)
  stripeCustomerId String? @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  purchases     Purchase[]
  favorites     Favorite[]
  bookmarks     Bookmark[]
  subscriptions Subscription[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// Template Models
// ============================================

enum Role {
  USER
  ADMIN
}

enum TemplateStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum TemplateTier {
  FREE
  PRO
}

enum SubscriptionPlan {
  BASIC
  STANDARD
  PREMIUM
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
}

model Template {
  id          String         @id @default(cuid())
  slug        String         @unique
  title       String
  description String?
  price       Int            @default(10)
  tier        TemplateTier   @default(FREE)
  category    String
  tags        String[]
  language    String         @default("한국어")
  style       String[]
  layout      String?
  sourceUrl   String?
  thumbnailUrl String?
  htmlPath    String?
  storageKey  String?
  status      TemplateStatus @default(PUBLISHED)
  viewCount   Int            @default(0)
  likeCount   Int            @default(0)
  saveCount   Int            @default(0)
  sections    Section[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  purchases   Purchase[]
  favorites   Favorite[]
  bookmarks   Bookmark[]

  @@index([category])
  @@index([status])
  @@index([viewCount(sort: Desc)])
  @@map("templates")
}

model Section {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  category    String
  templateId  String?
  tags        String[]
  language    String   @default("한국어")
  style       String[]
  layout      String?
  thumbnailUrl String?
  htmlContent String?
  price       Int      @default(5)
  viewCount   Int      @default(0)
  likeCount   Int      @default(0)
  saveCount   Int      @default(0)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  template    Template? @relation(fields: [templateId], references: [id], onDelete: Cascade)
  purchases   Purchase[]
  favorites   Favorite[]
  bookmarks   Bookmark[]

  @@index([category])
  @@index([templateId])
  @@map("sections")
}

// ============================================
// Commerce Models
// ============================================

model Purchase {
  id           String   @id @default(cuid())
  userId       String
  templateId   String?
  sectionId    String?
  creditsSpent Int
  createdAt    DateTime @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  template Template? @relation(fields: [templateId], references: [id])
  section  Section?  @relation(fields: [sectionId], references: [id])

  @@map("purchases")
}

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  templateId String?
  sectionId  String?
  createdAt  DateTime @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  template Template? @relation(fields: [templateId], references: [id], onDelete: Cascade)
  section  Section?  @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@unique([userId, templateId])
  @@unique([userId, sectionId])
  @@map("favorites")
}

model Bookmark {
  id         String   @id @default(cuid())
  userId     String
  templateId String?
  sectionId  String?
  createdAt  DateTime @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  template Template? @relation(fields: [templateId], references: [id], onDelete: Cascade)
  section  Section?  @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@unique([userId, templateId])
  @@unique([userId, sectionId])
  @@map("bookmarks")
}

// ============================================
// Credit Transaction Log
// ============================================

model Subscription {
  id            String             @id @default(cuid())
  userId        String
  stripeSubscriptionId String?     @unique
  plan          SubscriptionPlan
  status        SubscriptionStatus @default(ACTIVE)
  monthlyLimit  Int
  usedCount     Int                @default(0)
  price         Int
  currentPeriodStart DateTime      @default(now())
  currentPeriodEnd   DateTime
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@map("subscriptions")
}

model CreditTransaction {
  id          String   @id @default(cuid())
  userId      String
  amount      Int
  type        String
  description String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@map("credit_transactions")
}

model AppSetting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("app_settings")
}
